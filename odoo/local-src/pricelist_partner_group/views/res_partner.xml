<odoo>

  <record id="view_partner_property_form" model="ir.ui.view">
    <field name="name">res.partner.form.inherit</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="product.view_partner_property_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='property_product_pricelist']" position="after">
        <field name="factor_pricelist_item_id" attrs="{'invisible': [('is_company', '=', False), ('factor_pricelist_item_id', '=', False)]}"/>
        <field name="partner_group_pricelist_id" groups="base.group_no_one"/>
      </xpath>
    </field>
  </record>

</odoo>
