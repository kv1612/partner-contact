<?xml version="1.0"?>
<odoo noupdate="1">

  <record id="product_packaging_type_inner_box" model="product.packaging.type">
      <field name="name">Internal Package</field>
      <field name="code">IT</field>
      <field name="sequence" eval="2"/>
      <field name="has_gtin" eval="1"/>
  </record>

  <record id="product_packaging_type_retail_box" model="product.packaging.type">
      <field name="name">Retail Box</field>
      <field name="code">CU</field>
      <field name="sequence" eval="10"/>
      <field name="has_gtin" eval="1"/>
      <field name="required" eval="1"/>
  </record>

  <record id="product_packaging_type_transport" model="product.packaging.type">
      <field name="name">Transport Box</field>
      <field name="code">TU</field>
      <field name="sequence" eval="20"/>
      <field name="has_gtin" eval="1"/>
      <field name="required" eval="1"/>
  </record>

  <record id="product_packaging_type_pallet" model="product.packaging.type">
      <field name="name">Pallet</field>
      <field name="code">PL</field>
      <field name="sequence" eval="30"/>
      <field name="has_gtin" eval="1"/>
      <field name="required" eval="1"/>
      <field name="is_pallet" eval="1"/>
  </record>

  <record id="product_packaging_type_vendor_pallet" model="product.packaging.type">
      <field name="name">Vendor Pallet</field>
      <field name="code">PL-E</field>
      <field name="sequence" eval="40"/>
      <field name="is_pallet" eval="1"/>
      <field name="can_be_sold" eval="0"/>
  </record>

  <record id="product_packaging_type_op_rollercage" model="product.packaging.type">
      <field name="name">OP Rollercage</field>
      <field name="code">OPROL</field>
      <field name="sequence" eval="50"/>
      <field name="is_pallet" eval="0"/>
      <field name="can_be_sold" eval="0"/>
  </record>

</odoo>
