<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--
        Remove the translations of the menu name.
        We don't want to keep the original translation.
    -->
    <function model="ir.translation" name="unlink">
        <function model="ir.translation" name="search">
            <value eval="[('name', 'like', 'ir.ui.menu,name'), ('module', '=', 'knowledge'), ('res_id', '=', ref('knowledge.menu_document_root'))]"/>
        </function>
    </function>

    <record id="knowledge.menu_document_root" model="ir.ui.menu">
        <field name="name">ISO_C</field>
    </record>

</odoo>
