<odoo>
    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">delivery.carrier.carrier.form (delivery_cosanum)</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <page name="destination" position="after">
                <page
                    name="cosanum"
                    string="Cosanum"
                    attrs="{'invisible': [('delivery_type', '!=', 'cosanum')]}"
                >
                    <group>
                        <group name="packaging" string="Packaging">
                            <field
                                name="cosanum_default_packaging_id"
                                attrs="{'required': [('delivery_type', '=', 'cosanum')]}"
                            />
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
