<odoo>

  <record id="product_template_link_tree" model="ir.ui.view">
    <field name="name">product.template.link.tree.inherit</field>
    <field name="model">product.template.link</field>
    <field name="inherit_id" ref="product_template_multi_link.product_template_link_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//tree" position="inside">
        <field name="pricelist_replaced"/>
      </xpath>
    </field>
  </record> 

  <record id="action_duplicate_pricelist_items" model="ir.actions.server">
      <field name="name">Duplicate pricelist items</field>
      <field name="model_id" ref="product_template_multi_link.model_product_template_link"/>
      <field name="binding_model_id" ref="product_template_multi_link.model_product_template_link"/>
      <field name="binding_view_types">form,list</field>
      <field name="state">code</field>
      <field name="code">action = records.action_duplicate_pricelist_items()</field>
  </record>

</odoo>
