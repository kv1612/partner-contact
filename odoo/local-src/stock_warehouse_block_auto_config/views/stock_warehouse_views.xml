<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_warehouse" model="ir.ui.view">
        <field name="name">stock.warehouse</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <field name="reception_steps" position="after">
                <field name="block_reception_route_update" groups="base.group_no_one" />
            </field>
            <field name="reception_steps" position="attributes">
                <attribute name="attrs">{'readonly': [('block_reception_route_update', '=', True)]}</attribute>
            </field>
            <field name="delivery_steps" position="after">
                <field name="block_delivery_route_update" groups="base.group_no_one" />
            </field>
            <field name="delivery_steps" position="attributes">
                <attribute name="attrs">{'readonly': [('block_delivery_route_update', '=', True)]}</attribute>
            </field>
            <field name="manufacture_steps" position="after">
                <field name="block_manufacture_route_update" groups="base.group_no_one" />
            </field>
            <field name="manufacture_steps" position="attributes">
                <attribute name="attrs">{'readonly': [('block_manufacture_route_update', '=', True)]}</attribute>
            </field>
        </field>
    </record>

</odoo>
