<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_delivery_carrier_form_inherit_brauch" model="ir.ui.view">
        <field name="name">delivery.carrier.form.inherit.brauch</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="Brauch Configuration" attrs="{'invisible': [('delivery_type', '!=', 'brauch')]}">
                    <group>
                        <group name="packaging" string="Packaging">
                            <field
                                name="brauch_default_packaging_id"
                                attrs="{'required': [('delivery_type', '=', 'brauch')]}"
                            />
                        </group>
                    </group>
                    <group>
                        <group name="ftp">
                            <field name="brauch_ftp_uri" />
                            <field name="brauch_ftp_path" />
                            <field name="brauch_ftp_login" />
                            <field name="brauch_ftp_password" />
                        </group>
                        <group name="file">
                            <field name="brauch_filename" />
                            <field name="brauch_datetime_format" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
